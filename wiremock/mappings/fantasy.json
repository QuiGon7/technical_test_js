{
  "priority": 1,
  "request": {
    "method": "POST",
    "url": "/llm/generate",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.preferences contains 'fantasy' || @.preferences contains 'magic' || @.preferences contains 'adventure')]"
      }
    ]
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "recommendations": [
        "Book: 'Harry Potter and the Sorcerer's Stone' by J.K. Rowling",
        "Movie: 'The Lord of the Rings' Trilogy",
        "Game: 'The Legend of Zelda'"
      ]
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
